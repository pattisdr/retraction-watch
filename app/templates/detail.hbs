{{title model.title}}

{{!Copied from EMBER SHARE > app/templates/work.hbs}}
<div class="title-container">
    <div class="container">
        <div class="jumbotron">
            <h1 class="title">
                {{{safeTitle}}}
                <br>
                <small>{{model.type}}</small>
            </h1>
        </div>
    </div>
</div>

<div class="container detail-bottom-padding">
    <br>
    <p>
        {{#if safeDescription}}
            {{{safeDescription}}}
        {{else}}
            <span class="text-muted">No description provided.</span>
        {{/if}}
    </p>
    <br>

     {{#each sections as |section|}}
        {{#if (get this section.value)}}
            <br>
            <h3>{{section.title}}</h3>
            <hr class="detail-section-divider">
            {{component section.component model=model data=(get this section.value)}}
        {{/if}}
    {{/each}}

    {{#if hasExtra}}
        <br>
        <h3>Additional Information
            <small>
                <a {{action 'toggleExtra'}} href="#">
                    {{#if showExtra}}
                        <i class="fa fa-caret-down"></i>
                    {{else}}
                        <i class="fa fa-caret-right"></i>
                    {{/if}}
                </a>
            </small>
        </h3>
        <hr class="detail-section-divider">
        {{#if showExtra}}
            {{json-pretty obj=model.extra shouldHighlight=true}}
        {{/if}}
    {{/if}}
</div>
